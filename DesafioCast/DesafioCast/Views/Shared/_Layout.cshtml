<!DOCTYPE html>
<html lang="en">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - adoçâo</title>

    <style>
        li {
            margin-left: 10px !important;
            color: rgba(255,255,255,.75) !important;
        }



    </style>

     
        <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/heroic-features.css" rel="stylesheet">

      <link rel="stylesheet" href="~/css/style.css">
   
</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">


                <a class="navbar-brand" href="#">Sistema adoção</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">



                    <ul class="navbar-nav ml-auto">
                   
                        <li>@Html.ActionLink("Home", "Index", "home")</li>
                    


                        <li>@Html.ActionLink("Adoção", "Index", "adocaos")</li>


                        <li>@Html.ActionLink("Animais", "Index", "animals")</li>


                        <li>@Html.ActionLink("Raça", "Index",  "racas") </li>

                        <li class="nav-item">
                            @Html.ActionLink("Pessoa", "Index", "pessoas")
                   
                        </li>

                    </ul>


                </div>

                @ViewBag.usario
            </div>
    </nav>


    
    <div class="container body-content">
        @RenderBody()
        <hr />





        
    </div>

      <footer class="py-5 bg-dark foot" >
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Desafio Cast @DateTime.Now.Year</p>
      </div>
      <!-- /.container -->
    </footer>

   
    @RenderSection("scripts", required: false)


   

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
